<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.appnavigation.navgrap.FirstFragment"
        android:label="FirstFragment"
        tools:layout="@layout/first_actv">
        <action
            android:id="@+id/action_firstFragment_to_secondFragment"
            app:destination="@id/secondFragment" />
        <action
            android:id="@+id/action_firstFragment_to_aboutActivity"
            app:destination="@id/aboutActivity" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.appnavigation.navgrap.SecondFragment"
        android:label="SecondFragment"
        tools:layout="@layout/second_actv">
        <action
            android:id="@+id/action_secondFragment_to_firstFragment"
            app:destination="@id/firstFragment"
            app:popUpTo="@id/firstFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_secondFragment_to_thirdFragment"
            app:destination="@id/thirdFragment" />
        <action
            android:id="@+id/action_secondFragment_to_aboutActivity"
            app:destination="@id/aboutActivity" />
    </fragment>
    <fragment
        android:id="@+id/thirdFragment"
        android:name="com.example.appnavigation.navgrap.ThirdFragment"
        android:label="ThirdFragment"
        tools:layout="@layout/third_actv">
        <action
            android:id="@+id/action_thirdFragment_to_secondFragment"
            app:destination="@id/secondFragment"
            app:popUpTo="@id/secondFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_thirdFragment_to_firstFragment"
            app:destination="@id/firstFragment"
            app:popUpTo="@id/firstFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_thirdFragment_to_aboutActivity"
            app:destination="@id/aboutActivity" />
    </fragment>
    <activity
        android:id="@+id/aboutActivity"
        android:name="com.example.appnavigation.navgrap.AboutActivity"
        android:label="AboutActivity"
        tools:layout="@layout/about_actv" />

</navigation>